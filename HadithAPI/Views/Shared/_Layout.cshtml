<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hadith Web App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Amiri+Quran&family=Noto+Nastaliq+Urdu&display=swap" rel="stylesheet">
    <style>
         body{
        direction:rtl;
         }
        .arabic-text ,h5 {
            font-family: 'Amiri Quran', serif;
            font-size: 16px;
            color:teal;
            direction: rtl
        }

        .english-text{
            direction:ltr;
        }
        .urdu-text {
            font-family: 'Noto Nastaliq Urdu', serif;
            font-size: 12px;
            direction: rtl
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">Hadith App</a>
        </div>
    </nav>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <footer class="border-top text-muted text-center py-3">
        &copy; 2025 Hadith Web App
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
